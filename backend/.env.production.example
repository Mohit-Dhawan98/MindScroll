# Production Environment Configuration for MindScroll
# Copy this file to .env.production and fill in your actual values

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_REF].supabase.co:5432/postgres"

# Supabase Configuration
SUPABASE_URL="https://[YOUR_PROJECT_REF].supabase.co"
SUPABASE_ANON_KEY="[YOUR_ANON_KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR_SERVICE_ROLE_KEY]"

# JWT Secret (Use Supabase JWT secret or generate a secure one)
JWT_SECRET="[YOUR_JWT_SECRET]"

# Anthropic Claude API Key
ANTHROPIC_API_KEY="[YOUR_ANTHROPIC_API_KEY]"

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration (Add your production frontend URLs)
CORS_ORIGIN="https://your-production-domain.com,https://your-app-domain.com"

# Redis Configuration (Optional - for Bull Queue in production)
REDIS_URL="redis://localhost:6379"

# File Storage Configuration
STORAGE_TYPE="local" # Will be migrated to "cloudflare" later
CLOUDFLARE_R2_ENDPOINT="[YOUR_R2_ENDPOINT]"
CLOUDFLARE_R2_ACCESS_KEY_ID="[YOUR_R2_ACCESS_KEY]"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="[YOUR_R2_SECRET_KEY]"
CLOUDFLARE_R2_BUCKET_NAME="[YOUR_R2_BUCKET_NAME]"

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring (Optional)
SENTRY_DSN="[YOUR_SENTRY_DSN]"